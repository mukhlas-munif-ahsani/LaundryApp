            android:id="@+id/kaos_min"
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_toStartOf="@+id/kaos_num"
            android:onClick="buttonBodyOnclick"
            android:src="@drawable/ic_min"
            app:cb_color="@color/putih"
            app:cb_pressedRingWidth="8dip" />

        <TextView
            android:id="@+id/kaos_num"
            android:layout_width="@dimen/product_num_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/kaos_pls"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="0" />

        <at.markushi.ui.CircleButton
            android:id="@+id/kaos_pls"
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_alignParentEnd="true"
            android:onClick="buttonBodyOnclick"
            android:src="@drawable/ic_plus"
            app:cb_color="@color/putih"
            app:cb_pressedRingWidth="8dip" />
    </RelativeLayout>

